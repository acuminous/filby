{{#if hooks}}-- Drop Hooks{{/if}}
{{#hooks}}
DO $$
DECLARE
  v_hook_id INTEGER;
BEGIN
  SELECT h.id INTO v_hook_id
  FROM fby_hook h
  WHERE h.name = '{{name}}';

  IF v_hook_id IS NULL THEN
    RAISE EXCEPTION 'Hook ''{{name}}'' does not exist';
  END IF;

  DELETE FROM fby_hook
  WHERE id = v_hook_id;
END;
$$ LANGUAGE plpgsql;

{{/hooks}}